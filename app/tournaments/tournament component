import Link from "next/link";

function TournamentCard({
	title,
	date,
	status,
	description,
}: {
	title: string;
	date: string;
	status: "upcoming" | "ongoing" | "completed";
	description: string;
}) {
	const statusStyles = {
		upcoming: "bg-green-100 text-green-700 border-green-300",
		ongoing: "bg-yellow-100 text-yellow-700 border-yellow-300",
		completed: "bg-gray-200 text-gray-700 border-gray-300",
	};

	const emojis = {
		upcoming: "ğŸ“…",
		ongoing: "ğŸ”¥",
		completed: "ğŸ",
	};

	return (
		<div className="feature-card p-8 border rounded-xl bg-card relative">
			<div className="text-4xl mb-4">{emojis[status]}</div>

			<h3 className="text-2xl font-bold mb-2">{title}</h3>

			<p className="text-muted-foreground mb-4">{description}</p>

			<p className="font-semibold">ğŸ“† {date}</p>

			{/* Status badge */}
			<span
				className={`inline-block mt-4 px-3 py-1 text-sm rounded-full border ${statusStyles[status]}`}
			>
				{status.charAt(0).toUpperCase() + status.slice(1)}
			</span>

			{/* CTA */}
			{status !== "completed" && (
				<Link
					href={`/tournaments/${title.toLowerCase().replace(/ /g, "-")}`}
					className="btn-primary inline-block mt-6"
				>
					View Details
				</Link>
			)}
		</div>
	);
}
